    window.par = this;
    console.log($(this).parent().data('id'))
    $('.card').removeClass('current');
    $(this).parent().next().addClass('current');
    let id = $(this).parent().data('id');
    let value = this.value;
    let name = $('#name').text();
    $.post('',
    {
        id    : id,
        value : value,
        name  : name
    },
    function(data, status){
      if (data.match != null) {
          //alert (data.match.name);
          //$('#myModal').removeClass('hidden');
          console.log($('.modal'), 'butt')
          $('.modal').removeClass('hidden');
          //show modal
          //let feedback = $('.modal-content')
          //feedback.find('h2').text('You have matched!');
          //feedback.find('img').attr('src', 'http://mrwgifs.com/wp-content/uploads/2016/03/I-Like-What-You-Got-Good-Job-On-Rick-and-Morty-Get-Schwifty.gif');
      }
      $('.close' || !'.modal').click(function(e) {
        $('.modal').addClass('hidden');//close the modal when clicking on the x
      });
        console.log(data);
    }
  );
});
</script>

</html>
