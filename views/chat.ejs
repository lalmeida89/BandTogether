<!doctype html>
<html>
  <head>
    <title>Band Together</title>
    <!--<link href="index-app.css" rel="stylesheet" type="text/css" />-->
    <% include partials/head %>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin-top: 70px; padding: 0; border: 1px dashed green;}
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages { margin-bottom: 40px }
      .card     { margin-top: 20vw;}
      .box     { border: 1px dashed blue; height: 400px;}
    </style>
  </head>
  <body>
    <header>
      <% include partials/header %>
    </header>

    <div class='box'>
      <ul id="messages">
        <% for (var i = 0; i < chats.length; i++) { %>
          <li><%= chats[i] %>
          </li>
        <% } %>
      </ul>
      <form action="">
        <input id="m" autocomplete="off" /><button>Send</button>
      </form>
    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      $(function () {
        var socket = io();
        var room = window.location.pathname.split("/").pop();

          socket.on('connect', function() {
              // Connected, let's sign-up for to receive messages for this room
              socket.emit('room', room);
            });

        $('form').submit(function(){
          $.post('', {'chat' : $('#m').val()}, function(result) {
            console.log(result);
          });

          socket.emit('chat message', $('#m').val(), room);
          $('#m').val('');
          return false;
        });
        socket.on('chat message', function(msg){
          $('#messages').append($('<li>').text(msg));
          window.scrollTo(0, document.body.scrollHeight);
        });
      });
    </script>
  </body>
</html>
